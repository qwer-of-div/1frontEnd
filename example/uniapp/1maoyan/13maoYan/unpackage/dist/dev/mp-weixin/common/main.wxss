/*每个页面公共css */
.page-container {
  width: 100%;
  height: 100%;
}
.page-container .page-content {
  width: 100%;
  height: 100%;
}
page {
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
  font-size: 28rpx;
  color: #666;
}
.relative {
  position: relative;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-col {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.flex1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.flex3 {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  overflow: hidden;
}
.flex7 {
  -webkit-box-flex: 7;
  -webkit-flex: 7;
          flex: 7;
  overflow: hidden;
}
.flex8 {
  -webkit-box-flex: 8;
  -webkit-flex: 8;
          flex: 8;
  overflow: hidden;
}
.f-left {
  float: left;
}
.f-right {
  float: right;
}
/* 清除浮动 */
.clearfix:after {
  /*伪元素是行内元素 正常浏览器清除浮动方法*/
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
button {
  margin: 0;
  padding: 0;
  border: 1px solid transparent;
}
image {
  display: block;
}
.part-bg {
  background-color: #fff;
}
.scroll-x {
  white-space: nowrap;
}
.scroll-x > view {
  display: inline-block;
}

